                    <ul>
                        <span>Follow us on</span>
                        <li><a href="#"><img src="@Url.Content("~/images/fb.png")" /></a> <a href="#"><img src="@Url.Content("~/images/tw.png")" /></a> <a href="#"><img src="@Url.Content("~/images/g.png")" /></a> <a href="#"><img src="@Url.Content("~/images/pin.png")" /></a></li>

                    </ul>
                </div>

            </div>
        </div>
        <div class="copyright">

            <div class="container">
                <div class="col-lg-6 col-sm-12 text-left"><a href="#">Privacy Policy</a>&nbsp;&nbsp;  |&nbsp;&nbsp; <a href="#"> Terms & Conditions</a></div>
                <div class="col-lg-6 col-sm-12 text-right">Copyright 2015 All Rights Reserved</div>
            </div>
        </div>
        <!--start-smoth-scrolling-->
        <script type="text/javascript">
            $(document).ready(function() {


                $().UItoTop({ easingType: 'easeOutQuart' });

            });
