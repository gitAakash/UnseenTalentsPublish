@{
    ViewBag.Title = "registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h1">Registration</h1>
<div class="loginsection registration" ng-controller="registration">


    <div class="col-md-6">
        <div class="registrationform pd30">
            <h2>Registration Form</h2>
            <div class="form-group">
                <div ng-show="errorMsg" ng-bind="errorMsg" class="alert alert-{{errorType}} form-control"></div>
            </div>
            <div class="form-group col-lg-12">
                <label>Username</label>
                <input type="text" name="" class="form-control" id="userName" ng-model="modelLogin.userName">
            </div>
            <div class="form-group col-lg-12">
                <label>Email Address</label>
                <input type="text" name="" class="form-control" id="email" ng-model="modelLogin.emailId">
            </div>
            <div class="form-group col-lg-6">
                <label>Password</label>
                <input type="password" name="" class="form-control" id="password" ng-model="modelLogin.password">
            </div>

            <div class="form-group col-lg-6">
                <label>Repeat Password</label>
                <input type="password" name="" class="form-control" id="confirmPassword" ng-model="modelLogin.confirmPassword">
            </div>

         

            @*<div class="form-group col-lg-6">
                <label>Repeat Email Address</label>
                <input type="text" name="" class="form-control" id="confirmEmail" ng-model="modelLogin.confirmEmailId">
            </div>*@

            <div class="clr10"></div>
            <div class="form-group col-lg-12">
                <button type="submit" class="btn btn-primary" ng-click="registrationClickfunc(modelLogin)">Register Now</button>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="registrationformterms pd30" id="divProfileImages">
            <h2>Select Profile image</h2>
            <input type="hidden" id="hdnProfileImage" value="user" />
            <div class="col-md-3 selectpic selectedpic" id="images-1">
                <img src="~/ProfileImages/images-1.png" />
            </div>

            <div class="col-md-3 selectpic" id="images">
                <img src="~/ProfileImages/images.png" />
            </div>
            <div class="col-md-3 selectpic" id="imgres-1">
                <img src="~/ProfileImages/imgres-1.png" style="height:81px;" />
            </div>
            <div class="col-md-3 selectpic" id="imgres-2">
                <img src="~/ProfileImages/imgres-2.png" />
            </div>
            <div class="col-md-3 selectpic" id="imgres-3">
                <img src="~/ProfileImages/imgres-3.png" />
            </div>
            <div class="col-md-3 selectpic" id="imgres-4">
                <img src="~/ProfileImages/imgres-4.png" />
            </div>
            <div class="col-md-3 selectpic" id="imgres">
                <img src="~/ProfileImages/imgres.png" />
            </div>
            <div class="col-md-3 selectpic" id="user">
                <img src="~/ProfileImages/user.png" />
            </div>



            <div class="clr10"></div>

        </div>
    </div>

    <div class="clearfix"></div>
</div>
<div class="clr50"></div>

@section Js{
    <script src="~/Scripts/WebScripts/WebApp/registration.js"></script>
    <script>
        $('.col-md-3').on('click', function () {
            $('.col-md-3').removeClass('selectedpic');
            $(this).addClass('selectedpic');
            $('#hdnProfileImage').val($(this).attr('id'));
        });

    </script>
}