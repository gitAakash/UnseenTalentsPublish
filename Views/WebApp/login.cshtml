
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h1">Login</h1>
<div class="loginsection login-bg" ng-controller="LoginCtrl">

    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="loginform">
            <h2>Login <a href="@Url.Action("registration","webapp")">New User</a> </h2>
            <form role="form" class="form-horizontal pd30" id="loginform">
                <div class="form-group">
                    <div ng-show="errorMsg" ng-bind="errorMsg" class="alert alert-{{errorType}} form-control"></div>
                </div>
                <div class="input-group" style="margin-bottom: 25px">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" placeholder="username or email" value="" ng-enter="loginClickfunc(modelLogin)" name="username" class="form-control" id="email" ng-model="modelLogin.username" ng-enter required autofocus>
                </div>

                <div class="input-group" style="margin-bottom: 25px">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" placeholder="password" name="password" class="form-control" ng-enter="loginClickfunc(modelLogin)" id="pwd" ng-model="modelLogin.password" ng-enter required>
                </div>






                <div class="form-group" style="margin-top:10px">
                    <!-- Button -->

                    <div class="col-sm-12 controls">
                        <a class="btn btn-primary" id="btn-login" ng-click="loginClickfunc(modelLogin)">Submit  </a>
                        <a class=" " href="#" id="btn-fblogin">Forgot Password</a>

                    </div>
                </div>



            </form>
            <div class="clearfix"></div>

        </div>
    </div>
    <div class="clearfix"></div>
</div>
<div class="clr50"></div>

@section Js{
    <script src="~/Scripts/WebScripts/WebApp/login.js"></script>
}